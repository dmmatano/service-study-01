<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/enable_intent_service_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENABLE INTENT SERVICE =>"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toTopOf="@id/start_music_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/intent_service_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off"
        android:textSize="24sp"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toBottomOf="@id/enable_intent_service_btn"
        app:layout_constraintTop_toTopOf="@id/enable_intent_service_btn"
        app:layout_constraintStart_toEndOf="@id/enable_intent_service_btn"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/start_music_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="START MUSIC"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@id/stop_music_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/stop_music_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STOP MUSIC"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>